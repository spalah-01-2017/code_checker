{
    "env": {
        "browser": true
    },
    "extends": "eslint:recommended",
    "rules": {
        "no-console": "off",
        "no-global-assign": "off",
        "curly": "error",
        "no-plusplus": "warn",
        "camelcase": "error",
        "no-unneeded-ternary": "error",
        "guard-for-in": "error",
        "line-comment-position": "warn",
        "max-params": "error",
        "max-statements-per-line": "error",
        "new-cap": "error",
        "new-parens": "error",
        "newline-after-var": "warn",
        "newline-before-return": "warn",
        "object-property-newline": "error",
        "indent": [
            "error",
            "tab"
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "always"
        ],
        "object-curly-newline": [
            "error",
            {
                "minProperties": 2
            }
        ],
        "operator-assignment": "warn",
        "operator-linebreak": [
            "warn",
            "before"
        ],
        "radix": [
            "warn",
            "always"
        ],
        "space-before-function-paren": [
            "error",
            "never"
        ],
        "space-in-parens": [
            "error",
            "never"
        ],
        "space-infix-ops": "error",
        "space-unary-ops": [
            "error",
            {
                "words": true,
                "nonwords": false
            }
        ],
        "vars-on-top": "error",
        "yoda": [
            "warn",
            "never"
        ],
        "eqeqeq": [
            "error",
            "always"
        ],
        "eol-last": [
            "error",
            "always"
        ]
    }
}